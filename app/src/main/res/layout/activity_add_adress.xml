<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.AddAdress"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/cremeone"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView

                android:textColor="@color/brown"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/main"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Address"/>
            <EditText
                android:singleLine="true"
                android:fontFamily="@font/main"
                android:id="@+id/House"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:hint="House No, Apportment name"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cedittextshape"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
                <EditText
                    android:singleLine="true"
                    android:id="@+id/house"
                    android:fontFamily="@font/main"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:hint="Road Name ,Area &amp; Colony"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cedittextshape"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
                <EditText
                    android:singleLine="true"
                    android:id="@+id/locality"
                    android:fontFamily="@font/main"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:text="Manikonda"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cedittextshape"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
                <EditText
                    android:singleLine="true"
                    android:id="@+id/clandmark"
                    android:fontFamily="@font/main"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:text="Hyderabad"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cedittextshape"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
                <EditText
                    android:singleLine="true"
                    android:id="@+id/nearbyplace"
                    android:fontFamily="@font/main"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:hint="Landmark (Optional)"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cedittextshape"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/brown"
                    android:textSize="18dp"
                    android:fontFamily="@font/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nickname For Address"/>
                <LinearLayout

                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:gravity="center"
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton

                                android:buttonTint="@color/brown"
                                android:clickable="true"
                                android:textSize="15dp"
                                android:fontFamily="@font/main"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Home"/>

                            <RadioButton
                                android:layout_marginLeft="20dp"
                                android:buttonTint="@color/brown"
                                android:clickable="true"
                                android:textSize="15dp"
                                android:fontFamily="@font/main"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Office"/>

                            <RadioButton
                                android:layout_marginLeft="20dp"
                                android:buttonTint="@color/brown"
                                android:clickable="true"
                                android:textSize="15dp"
                                android:fontFamily="@font/main"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Other"/>
                        </RadioGroup>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttonshape"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


                </LinearLayout>

            </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>