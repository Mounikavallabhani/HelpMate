<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ChangeArea"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/cremeone"

        app:cardElevation="3dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/brown"
                android:textSize="18dp"
                android:gravity="center"
                android:fontFamily="@font/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search For Your Location"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
           >
        <TextView
            android:drawableLeft="@drawable/ic_my_location"
            android:drawablePadding="10dp"
            android:id="@+id/currentlocation"
            android:textSize="18dp"
            android:fontFamily="@font/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My location"/>
            </LinearLayout>
            <TextView
                android:drawableLeft="@drawable/add"
                android:drawablePadding="10dp"
                android:id="@+id/addaddres"
                android:textSize="20dp"
                android:padding="5dp"
                android:fontFamily="@font/main"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Add Address"/>
        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/brown"
            android:textSize="18dp"
            android:fontFamily="@font/main"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved Addresses"/>
    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclelocation"
            android:background="@color/cremeone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>